@inherits DotNetNuke.Web.Mvc.Framework.DnnWebViewPage<IEnumerable<PirosBiros.Dnn.Dnn.PirosBiros.HelloWorld.Models.Item>>

@using System.Text.RegularExpressions
@using DotNetNuke.Web.Mvc.Helpers

<style>
    .base {
        background-color: rgb(229, 19, 2);
        color: white;
        font-size: 25px;
        margin: 0 10px;
        border-color: rgb(0, 0, 0);
        border-width: 3px;
        border-style: solid;
    }

    .red-div {
        padding: 10px;
    }

    .price {
        width: 100px;
        text-align: end;
    }

    .currency {
        width: 80px;
        text-align: end;
    }

    .red-dropdown {
        border-radius: 15px;
        font-weight: bold;
        font-size: 20px;
        padding: 5px;
    }
</style>


<div style="display: flex; flex-direction: row; justify-content: center;">
    <select name="currency" id="currencys" class="base red-dropdown">
        @foreach (var item in Model)
        {
            if (item.IsActive)
            {
                <option class="red-dropdown-value" value="@item.CurrencyName @item.CurrencyValue" onchange="asd(@item.CurrencyValue)">@item.LongCurrencyName</option>
            }
        }
    </select>

    <p style="margin: 0 10px 0 20px; padding-top: 8px; font-weight: bold; font-size: 20px">Árfolyam:</p>
    <div class="base red-div price" id="currencyValue"></div>
    <div class="base red-div">HUF</div>
    <div style="font-size: 80px">&#x2192</div>
    <div class="base red-div currency" id="currencyName"></div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Név</th>
            <th scope="col">Teljes név</th>
            <th scope="col">Érték</th>
            <th scope="col">Aktív e</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.CurrencyName</td>
                <td>@item.LongCurrencyName</td>
                <td>@item.CurrencyValue</td>
                <td>@item.IsActive</td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    (function ($, Sys) {
        $(function () {
            $('#currencys').change(function () {
                var name = $(this).val().split(' ')[0];
                var value = $(this).val().split(' ')[1];
                $('#currencyName').text(name);
                $('#currencyValue').text(value);

            });
     });
    }(jQuery, window.Sys));
</script>

